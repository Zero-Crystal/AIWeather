<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_0"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/srl_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/dp_10">

                <!-- 实时天气-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_weather_locate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:textSize="23sp"
                        android:textColor="@color/white"
                        android:text="利通区"/>

                    <ImageView
                        android:id="@+id/iv_locate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/tv_weather_locate"
                        app:layout_constraintBottom_toBottomOf="@id/tv_weather_locate"
                        app:layout_constraintLeft_toRightOf="@+id/tv_weather_locate"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:visibility="invisible"/>

                    <TextView
                        android:id="@+id/tv_weather_tem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv_weather_locate"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginTop="@dimen/dp_10"
                        android:textSize="40sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:text="10℃"/>

                    <View
                        android:id="@+id/v_weather_slip"
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="@dimen/dp_25"
                        app:layout_constraintTop_toBottomOf="@+id/tv_weather_tem"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@color/white" />

                    <TextView
                        android:id="@+id/tv_weather_tem_max_min"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv_weather_tem"
                        app:layout_constraintRight_toLeftOf="@+id/v_weather_slip"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_15"
                        android:textSize="23sp"
                        android:textColor="@color/white"
                        android:text="10℃~0℃"/>

                    <TextView
                        android:id="@+id/tv_weather_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv_weather_tem"
                        app:layout_constraintLeft_toRightOf="@+id/v_weather_slip"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:text="晴"/>


                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- 逐小时天气-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_15">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_weather_hour"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_weather_day"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintTop_toBottomOf="@+id/rv_weather_hour"
                        android:layout_marginTop="@dimen/dp_10"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>