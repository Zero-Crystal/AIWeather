<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_sun"
    tools:context=".ui.activity.MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/function"
        android:background="@color/blue_30"/>

    <fragment
        android:id="@+id/fg_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tb_title"
        android:layout_marginTop="@dimen/dp_10"
        android:name="com.zero.aiweather.ui.fragment.WeatherFragment"/>
</RelativeLayout>